{
  "name": "postcss-lit",
  "version": "0.0.0-dev",
  "description": "Lit support for PostCSS and related tooling",
  "main": "lib/main.js",
  "type": "commonjs",
  "files": [
    "lib/",
    "!lib/test",
    "docs"
  ],
  "scripts": {
    "clean": "rimraf ./lib",
    "lint": "eslint \"src/**/*.ts\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "test": "nyc --reporter=html --reporter=text-summary --reporter=lcov mocha \"lib/test/**/*_test.js\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/43081j/postcss-lit.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/babel__generator": "^7.6.3",
    "@types/babel__traverse": "^7.14.2",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.9",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "mocha": "^11.7.5",
    "nyc": "^17.1.0",
    "postcss": "^8.5.6",
    "premove": "^4.0.0",
    "prettier": "^3.8.0",
    "rollup": "^4.55.1",
    "stylelint": "^17.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "peerDependencies": {
    "postcss": "^8.3.11"
  },
  "dependencies": {
    "@babel/generator": "^7.28.6",
    "@babel/parser": "^7.16.2",
    "@babel/traverse": "^7.28.6",
    "lilconfig": "^3.1.3",
    "postcss-load-config": "^6.0.1"
  }
}
